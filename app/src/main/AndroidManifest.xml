<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mikhail.game2">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/trytothink_ico"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".SelectSection" />
        <activity android:name=".CreatorLvls"
            android:windowSoftInputMode="adjustResize"/>
        <activity
            android:name=".Section1"
            android:noHistory="true"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".Section2"
            android:noHistory="true"
            android:windowSoftInputMode="adjustResize" />
        <activity android:name=".Section1_select" />
    </application>

</manifest>
